@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    ViewData["Title"] = "Assessment Management";
}
<link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/dt-2.0.0/datatables.min.css" />

<div class="mt-3">
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex align-items-center gap-2">
            <h5 class="mb-0">Questions</h5>
            <div class="ms-auto d-flex gap-2">
                <button id="btnBulkUpload" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-upload me-1"></i>Bulk Upload
                </button>
                <button id="btnAddQuestion" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle me-1"></i>Add Question
                </button>
                <button id="btnBulkDelete" class="btn btn-outline-danger btn-sm" disabled>
                    <i class="bi bi-trash me-1"></i>Delete Selected
                </button>
                <button id="btnRefresh" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="questionsTable" class="table table-striped table-hover align-middle w-100">
                    <thead class="table-light">
                        <tr>
                            <th style="width:36px;" class="text-center">
                                <input type="checkbox" id="questionsSelectAll" class="form-check-input" aria-label="Select all questions" />
                            </th>
                            <th style="width:90px;"></th>
                            <th style="width:60px;">Order</th>
                            <th>Question</th>
                            <th style="width:120px;">Options</th>
                            <th style="width:110px;">Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <small class="text-muted d-block mt-2">Manage question text, order, options and strand weights.</small>
        </div>
    </div>
</div>

<!-- Add Question Modal -->
<div class="modal fade" id="modalAddQuestion" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <form id="formAddQuestion">
        <div class="modal-header">
          <h5 class="modal-title">Add Question</h5>
          <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
        </div>
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-sm-3">
              <label class="form-label">Order</label>
              <input type="number" min="1" class="form-control" id="addQuestionOrder" required>
            </div>
            <div class="col-sm-9">
              <label class="form-label">Is Active</label>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="addQuestionActive" checked>
                <label class="form-check-label" for="addQuestionActive">Active</label>
              </div>
            </div>
            <div class="col-12">
              <label class="form-label">Question Text</label>
              <textarea class="form-control" id="addQuestionText" rows="3" maxlength="500" required></textarea>
              <div class="form-text"><span id="addQuestionChars">0</span>/500</div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary btn-sm" type="button" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-primary btn-sm" type="submit">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Question Modal -->
<div class="modal fade" id="modalEditQuestion" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <form id="formEditQuestion">
        <input type="hidden" id="editQuestionId" />
        <div class="modal-header">
          <h5 class="modal-title">Edit Question</h5>
          <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
        </div>
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-sm-3">
              <label class="form-label">Order</label>
              <input type="number" min="1" class="form-control" id="editQuestionOrder" required>
            </div>
            <div class="col-sm-9">
              <label class="form-label">Is Active</label>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="editQuestionActive">
                <label class="form-check-label" for="editQuestionActive">Active</label>
              </div>
            </div>
            <div class="col-12">
              <label class="form-label">Question Text</label>
              <textarea class="form-control" id="editQuestionText" rows="3" maxlength="500" required></textarea>
              <div class="form-text"><span id="editQuestionChars">0</span>/500</div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-outline-danger btn-sm me-auto" id="btnDeleteQuestion" type="button">
            <i class="bi bi-trash me-1"></i>Delete
          </button>
          <button class="btn btn-secondary btn-sm" type="button" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-primary btn-sm" type="submit">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Manage Options Modal -->
<div class="modal fade" id="modalOptions" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Options for: <span id="optionsQuestionTitle"></span></h5>
        <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex gap-2 mb-2">
            <button class="btn btn-primary btn-sm" id="btnAddOption"><i class="bi bi-plus-circle me-1"></i>Add Option</button>
            <button class="btn btn-outline-secondary btn-sm" id="btnReloadOptions"><i class="bi bi-arrow-clockwise me-1"></i>Reload</button>
        </div>
        <table class="table table-sm table-hover align-middle" id="optionsTable">
            <thead class="table-light">
                <tr>
                    <th style="width:70px;">Letter</th>
                    <th>Text</th>
                    <th style="width:120px;">Weights</th>
                    <th style="width:90px;"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <hr class="my-3">
        <h6 class="mb-2">Add / Edit Option</h6>
        <form id="formOption" class="row g-2">
            <input type="hidden" id="optionId" />
            <div class="col-sm-2">
                <label class="form-label mb-0">Letter</label>
                <input type="text" maxlength="1" id="optionLetter" class="form-control form-control-sm" required>
            </div>
            <div class="col-sm-8">
                <label class="form-label mb-0">Text</label>
                <input type="text" maxlength="300" id="optionText" class="form-control form-control-sm" required>
            </div>
            <div class="col-sm-2 d-flex align-items-end gap-1">
                <button class="btn btn-primary btn-sm w-100" id="btnSaveOption" type="submit">Save</button>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal" type="button">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Weights Modal -->
<div class="modal fade" id="modalWeights" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-md modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Strand Weights: <span id="weightsOptionLabel"></span></h5>
        <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
      </div>
      <div class="modal-body">
        <table class="table table-sm table-bordered align-middle" id="weightsTable">
            <thead class="table-light">
                <tr>
                    <th>Strand</th>
                    <th style="width:120px;">Weight</th>
                    <th style="width:60px;"></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <hr class="my-2">
        <form id="formWeight" class="row g-2 align-items-end">
            <input type="hidden" id="weightsOptionId" />
            <div class="col-7">
                <label class="form-label mb-0">Strand</label>
                <select id="weightStrandId" class="form-select form-select-sm" required>
                    <option value="" disabled selected>Select...</option>
                </select>
            </div>
            <div class="col-3">
                <label class="form-label mb-0">Weight</label>
                <input type="number" min="0" max="1" step="0.01" id="weightValue" class="form-control form-control-sm" required>
            </div>
            <div class="col-2">
                <button class="btn btn-primary btn-sm w-100" type="submit">Save</button>
            </div>
        </form>
        <small class="text-muted d-block mt-2">Setting an existing strand again updates its weight.</small>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal" type="button">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Bulk Upload Modal -->
<div class="modal fade" id="modalBulkUploadAssess" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
     <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title">Bulk Upload Questions</h5>
         <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
       </div>
       <div class="modal-body">
         <form id="formBulkAssess" class="row g-3">
            <div class="col-md-6">
              <label class="form-label">CSV File</label>
              <input class="form-control form-control-sm" type="file" id="bulkAssessFile" accept=".csv" required />
              <div class="form-text">
                Flat: <code>QuestionOrder,QuestionText,OptionLetter,OptionText,Weight_STEM,...</code><br/>
                Long: <code>QuestionOrder,QuestionText,OptionLetter,OptionText,Strand,Weight</code>
              </div>
            </div>
            <div class="col-md-3">
              <label class="form-label d-flex justify-content-between">
                <span>Mode</span>
                <a href="@Url.Action("BulkUploadTemplate","AssessmentManagement")" class="small">Template</a>
              </label>
              <select id="bulkAssessMode" class="form-select form-select-sm">
                <option value="insert" selected>Insert</option>
                <option value="upsert">Upsert</option>
              </select>
            </div>
            <div class="col-md-3">
              <label class="form-label">&nbsp;</label>
              <button type="button" id="btnBulkAssessUpload" class="btn btn-primary btn-sm w-100">
                <i class="bi bi-upload me-1"></i>Upload
              </button>
            </div>
         </form>
         <hr />
         <div id="bulkAssessResult" class="d-none">
            <h6 class="mb-2">Result</h6>
            <pre class="small bg-light p-2 border" id="bulkAssessResultText"></pre>
         </div>
         <small class="text-muted">Upsert replaces options & weights for existing QuestionOrder.</small>
       </div>
       <div class="modal-footer">
         <button class="btn btn-outline-secondary btn-sm" type="button" id="btnBulkAssessReset">Reset</button>
         <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal" type="button">Close</button>
       </div>
     </div>
  </div>
</div>

@section Scripts {
<script src="https://cdn.datatables.net/v/bs5/dt-2.0.0/datatables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
(function($){
    const questionsTable = new DataTable('#questionsTable', {
        ajax: { url: '@Url.Action("ListQuestions","AssessmentManagement")', dataSrc: 'data' },
        ordering: true,
        columns: [
            { data: null, orderable:false, className: 'text-center', render: (_, __, row) => `<input type="checkbox" class="form-check-input row-select" value="${row.id}" aria-label="Select question" />` },
            { data: null, orderable:false, render: renderQuestionActions },
            { data: 'order' },
            { data: 'text' },
            { data: 'optionsCount', render: v => v ?? 0 },
            { data: 'isActive', render: v => v ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-secondary">Inactive</span>' }
        ]
    });

    function renderQuestionActions(_, __, row){
        return `
<div class="dropdown">
  <button class="btn btn-light btn-sm dropdown-toggle" data-bs-toggle="dropdown">Actions</button>
  <ul class="dropdown-menu dropdown-menu-end">
    <li><a class="dropdown-item" href="#" data-action="edit" data-id="${row.id}"><i class="bi bi-pencil-square me-1"></i>Edit</a></li>
    <li><a class="dropdown-item" href="#" data-action="options" data-id="${row.id}" data-text="${htmlEscape(row.text)}"><i class="bi bi-list-ul me-1"></i>Options</a></li>
    <li><a class="dropdown-item text-danger" href="#" data-action="delete" data-id="${row.id}"><i class="bi bi-trash me-1"></i>Delete</a></li>
  </ul>
</div>`;
    }

    $('#btnRefresh').on('click', () => questionsTable.ajax.reload(null,false));

    function ajaxJson(url, method, payload){
        return $.ajax({ url, method, contentType: 'application/json', data: payload ? JSON.stringify(payload) : null });
    }
    function htmlEscape(s){ return (s||'').replace(/[&<>"']/g, c => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;','\"':'&quot;','\'':'&#39;'}[c])); }

    // Character counters
    $('#addQuestionText').on('input', function(){ $('#addQuestionChars').text(this.value.length); });
    $('#editQuestionText').on('input', function(){ $('#editQuestionChars').text(this.value.length); });

    // ---------------- Select All / Row selection ----------------
    function getSelectedIds(){
        return $('#questionsTable tbody .row-select:checked').map(function(){ return $(this).val(); }).get();
    }
    function updateBulkDeleteState(){
        const any = getSelectedIds().length > 0;
        $('#btnBulkDelete').prop('disabled', !any);
    }
    function updateSelectAllState(){
        const all = $('#questionsTable tbody .row-select');
        const checked = all.filter(':checked');
        const headerCb = document.getElementById('questionsSelectAll');
        if(!headerCb){ return; }
        if(all.length === 0){ headerCb.checked = false; headerCb.indeterminate = false; updateBulkDeleteState(); return; }
        if(checked.length === 0){ headerCb.checked = false; headerCb.indeterminate = false; }
        else if(checked.length === all.length){ headerCb.checked = true; headerCb.indeterminate = false; }
        else { headerCb.checked = false; headerCb.indeterminate = true; }
        updateBulkDeleteState();
    }

    $('#questionsTable thead').on('change', '#questionsSelectAll', function(){
        const on = this.checked;
        $('#questionsTable tbody .row-select').prop('checked', on);
        updateSelectAllState();
    });

    $('#questionsTable tbody').on('change', '.row-select', function(){
        updateSelectAllState();
    });

    // Keep header checkbox and bulk delete state in sync after table draws
    $('#questionsTable').on('draw.dt', function(){
        const headerCb = document.getElementById('questionsSelectAll');
        if(headerCb){ headerCb.checked = false; headerCb.indeterminate = false; }
        updateSelectAllState();
    });

    async function precheck(ids){
        try{
            const res = await fetch('@Url.Action("CanDeleteQuestions","AssessmentManagement")', { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify({ ids }) });
            const j = await res.json().catch(()=>({}));
            if(!res.ok){ throw new Error(j.message || 'Unable to check dependencies.'); }
            return j;
        }catch(err){
            await Swal.fire({ icon:'error', title:'Failed', text: err.message || 'Unable to check dependencies.' });
            return null;
        }
    }

    // Bulk delete action with pre-check
    $('#btnBulkDelete').on('click', async function(){
        const ids = getSelectedIds();
        if(ids.length === 0){ return; }
        const confirmDlg = await Swal.fire({
            icon: 'warning',
            title: `Delete ${ids.length} selected question(s)?`,
            text: 'This action cannot be undone.',
            showCancelButton: true,
            confirmButtonText: 'Continue',
            cancelButtonText: 'Cancel'
        });
        if(!confirmDlg.isConfirmed) return;

        const pre = await precheck(ids);
        if(!pre) return;
        const blocked = (pre.inUse||[]);
        const allowed = (pre.ok||[]);

        if(blocked.length && allowed.length === 0){
            const reasons = blocked.map(b=>`• ${b.id}: ${b.reason || 'in use'}`).join('<br/>');
            await Swal.fire({ icon:'warning', title:'Cannot delete selected questions', html: `<div class="text-start">${reasons}</div>` });
            return;
        }
        if(blocked.length && allowed.length > 0){
            const reasons = blocked.map(b=>`• ${b.id}: ${b.reason || 'in use'}`).join('<br/>' );
            const proceed = await Swal.fire({
                icon:'warning',
                title:'Some items cannot be deleted',
                html: `<div class="text-start mb-2">The following will be skipped:<br/>${reasons}</div><div>Proceed deleting the rest?</div>`,
                showCancelButton: true,
                confirmButtonText: 'Delete allowed',
                cancelButtonText: 'Cancel'
            });
            if(!proceed.isConfirmed) return;
        }

        ajaxJson('@Url.Action("BulkDeleteQuestions","AssessmentManagement")','POST', { ids: allowed })
          .done(async r => {
              const deleted = r.deleted ?? 0;
              const requested = r.requested ?? ids.length;
              let msg = `Requested: ${requested}\nDeleted: ${deleted}`;
              if(blocked.length){ msg += `\nBlocked: ${blocked.length}`; }
              if(r.notFound && r.notFound.length){ msg += `\nNot found: ${r.notFound.length}`; }
              if(r.errors && r.errors.length){ msg += `\nErrors: ${r.errors.length}`; }
              await Swal.fire({ icon:'success', title:'Done', html: `<pre class="text-start mb-0">${msg}</pre>` });
              $('#questionsSelectAll').prop('checked', false).prop('indeterminate', false);
              questionsTable.ajax.reload(null,false);
          })
          .fail(async xhr => {
              await Swal.fire({ icon:'error', title:'Failed', text: xhr.responseJSON?.message || 'Bulk delete failed.' });
          });
    });

    // ---------------- Add Question ----------------
    $('#btnAddQuestion').on('click', () => {
        $('#formAddQuestion')[0].reset();
        $('#addQuestionChars').text('0');
        new bootstrap.Modal('#modalAddQuestion').show();
    });

    $('#formAddQuestion').on('submit', function(e){
        e.preventDefault();
        const payload = {
            questionText: $('#addQuestionText').val().trim(),
            questionOrder: parseInt($('#addQuestionOrder').val(),10),
            isActive: $('#addQuestionActive').is(':checked')
        };
        ajaxJson('@Url.Action("CreateQuestion","AssessmentManagement")','POST', payload)
            .done(async r => {
                if(!r.success){ await Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return; }
                bootstrap.Modal.getInstance(document.getElementById('modalAddQuestion')).hide();
                questionsTable.ajax.reload(null,false);
            })
            .fail(async xhr => await Swal.fire({ icon:'error', title:'Failed', text: xhr.responseJSON?.message || 'Error creating question.' }));
    });

    // ---------------- Edit / Delete Question ----------------
    $('#questionsTable').on('click','a[data-action]', async function(e){
        e.preventDefault();
        const a = $(this);
        const action = a.data('action');
        const id = a.data('id');
        if(action === 'edit'){
            const row = questionsTable.row(a.closest('tr')).data();
            $('#editQuestionId').val(row.id);
            $('#editQuestionOrder').val(row.order);
            $('#editQuestionText').val(row.text);
            $('#editQuestionActive').prop('checked', row.isActive);
            $('#editQuestionChars').text(row.text.length);
            new bootstrap.Modal('#modalEditQuestion').show();
        } else if(action === 'delete'){
            const confirmDlg = await Swal.fire({
                icon: 'warning',
                title: 'Delete this question?',
                text: 'This action cannot be undone.',
                showCancelButton: true,
                confirmButtonText: 'Delete',
                cancelButtonText: 'Cancel'
            });
            if(!confirmDlg.isConfirmed) return;

            const pre = await precheck([id]);
            if(!pre) return;
            if((pre.inUse||[]).length){
                await Swal.fire({ icon:'warning', title:'Cannot delete', text: pre.inUse[0]?.reason || 'This question has dependent data.' });
                return;
            }

            ajaxJson('@Url.Action("BulkDeleteQuestions","AssessmentManagement")','POST', { ids: [id] })
              .done(async r=>{
                  if(!(r.deleted>0)){
                      await Swal.fire({ icon:'error', title:'Failed', text: (r.errors&&r.errors[0]) || 'Delete failed.' });
                      return;
                  }
                  await Swal.fire({ icon:'success', title:'Deleted', timer: 1400, showConfirmButton:false });
                  questionsTable.ajax.reload(null,false);
              })
              .fail(async xhr=> await Swal.fire({ icon:'error', title:'Failed', text: xhr.responseJSON?.message||'Error deleting.' }));
        } else if(action === 'options'){
            const row = questionsTable.row(a.closest('tr')).data();
            openOptionsModal(id, a.data('text'));
        }
    });

    $('#formEditQuestion').on('submit', function(e){
        e.preventDefault();
        const payload = {
            id: $('#editQuestionId').val(),
            questionOrder: parseInt($('#editQuestionOrder').val(),10),
            questionText: $('#editQuestionText').val().trim(),
            isActive: $('#editQuestionActive').is(':checked')
        };
        ajaxJson('@Url.Action("UpdateQuestion","AssessmentManagement")','POST', payload)
            .done(async r=>{
                if(!r.success){ await Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return; }
                bootstrap.Modal.getInstance(document.getElementById('modalEditQuestion')).hide();
                questionsTable.ajax.reload(null,false);
            })
            .fail(async xhr=>await Swal.fire({ icon:'error', title:'Failed', text: xhr.responseJSON?.message||'Error updating question.' }));
    });

    $('#btnDeleteQuestion').on('click', async function(){
        const id = $('#editQuestionId').val();
        const confirmDlg = await Swal.fire({
            icon: 'warning',
            title: 'Delete this question?',
            text: 'This action cannot be undone.',
            showCancelButton: true,
            confirmButtonText: 'Delete',
            cancelButtonText: 'Cancel'
        });
        if(!confirmDlg.isConfirmed) return;

        const pre = await precheck([id]);
        if(!pre) return;
        if((pre.inUse||[]).length){
            await Swal.fire({ icon:'warning', title:'Cannot delete', text: pre.inUse[0]?.reason || 'This question has dependent data.' });
            return;
        }

        ajaxJson('@Url.Action("BulkDeleteQuestions","AssessmentManagement")','POST',{ ids: [id] })
            .done(async r=>{
                if(!(r.deleted>0)){
                    await Swal.fire({ icon:'error', title:'Failed', text:(r.errors&&r.errors[0])||'Failed' });
                    return;
                }
                bootstrap.Modal.getInstance(document.getElementById('modalEditQuestion')).hide();
                await Swal.fire({ icon:'success', title:'Deleted', timer:1200, showConfirmButton:false });
                questionsTable.ajax.reload(null,false);
            })
            .fail(async xhr=>await Swal.fire({ icon:'error', title:'Failed', text: xhr.responseJSON?.message||'Error deleting question.' }));
    });

    // ---------------- Options ----------------
    let currentQuestionId = null;
    function openOptionsModal(questionId, questionText){
        currentQuestionId = questionId;
        $('#optionsQuestionTitle').text(questionText);
        $('#formOption')[0].reset();
        $('#optionId').val('');
        loadOptions();
        new bootstrap.Modal('#modalOptions').show();
    }

    function loadOptions(){
        if(!currentQuestionId) return;
        $.get('@Url.Action("ListQuestionOptions","AssessmentManagement")',{ questionId: currentQuestionId })
         .done(r=>{
             const tbody = $('#optionsTable tbody').empty();
             (r.data||[]).forEach(o=>{
                 const tr = $(`

<tr>
  <td class="fw-semibold">${htmlEscape(o.letter)}</td>
  <td>${htmlEscape(o.text)}</td>
  <td><span class="badge bg-info-subtle text-dark">${o.weightsCount}</span></td>
  <td class="text-end">
    <div class="btn-group btn-group-sm">
      <button class="btn btn-outline-primary" data-opt="edit" data-id="${o.id}" data-letter="${o.letter}" data-text="${htmlEscape(o.text)}">Edit</button>
      <button class="btn btn-outline-secondary" data-opt="weights" data-id="${o.id}" data-letter="${o.letter}">Weights</button>
      <button class="btn btn-outline-danger" data-opt="delete" data-id="${o.id}">Del</button>
    </div>
  </td>
</tr>`);
                 tbody.append(tr);
             });
         })
         .fail(()=>Swal.fire({ icon:'error', title:'Failed', text:'Failed to load options.' }));
    }

    $('#btnReloadOptions').on('click', loadOptions);
    $('#btnAddOption').on('click', function(){
        $('#formOption')[0].reset();
        $('#optionId').val('');
        $('#optionLetter').prop('disabled', false);
    });

    $('#optionsTable').on('click','button[data-opt]', function(){
        const btn = $(this);
        const action = btn.data('opt');
        const id = btn.data('id');
        if(action === 'edit'){
            $('#optionId').val(id);
            $('#optionLetter').val(btn.data('letter')).prop('disabled', true);
            $('#optionText').val(btn.data('text'));
        } else if(action === 'delete'){
            Swal.fire({
                icon:'warning', title:'Delete this option?', showCancelButton:true, confirmButtonText:'Delete', cancelButtonText:'Cancel'
            }).then(result=>{
                if(!result.isConfirmed) return;
                ajaxJson('@Url.Action("DeleteOption","AssessmentManagement")','POST',{ id })
                  .done(r=>{
                      if(!r.success){ Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return;}
                      loadOptions();
                      questionsTable.ajax.reload(null,false);
                  })
                  .fail(xhr=>Swal.fire({ icon:'error', title:'Failed', text:xhr.responseJSON?.message||'Error deleting option.' }));
            });
        } else if(action === 'weights'){
            openWeightsModal(id, btn.data('letter'));
        }
    });

    $('#formOption').on('submit', function(e){
        e.preventDefault();
        const id = $('#optionId').val();
        const payload = {
            questionId: currentQuestionId,
            optionLetter: $('#optionLetter').val().trim().toUpperCase(),
            optionText: $('#optionText').val().trim()
        };
        if(!id){
            ajaxJson('@Url.Action("CreateOption","AssessmentManagement")','POST', payload)
              .done(r=>{
                  if(!r.success){ Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return;}
                  loadOptions(); questionsTable.ajax.reload(null,false);
                  $('#formOption')[0].reset();
              })
              .fail(xhr=>Swal.fire({ icon:'error', title:'Failed', text:xhr.responseJSON?.message||'Error creating option.' }));
        } else {
            const updatePayload = {
                id,
                optionLetter: payload.optionLetter,
                optionText: payload.optionText
            };
            ajaxJson('@Url.Action("UpdateOption","AssessmentManagement")','POST', updatePayload)
              .done(r=>{
                  if(!r.success){ Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return;}
                  loadOptions(); questionsTable.ajax.reload(null,false);
                  $('#formOption')[0].reset(); $('#optionId').val(''); $('#optionLetter').prop('disabled', false);
              })
              .fail(xhr=>Swal.fire({ icon:'error', title:'Failed', text:xhr.responseJSON?.message||'Error updating option.' }));
        }
    });

    // ---------------- Weights ----------------
    function openWeightsModal(optionId, letter){
        $('#weightsOptionId').val(optionId);
        $('#weightsOptionLabel').text(letter);
        $('#formWeight')[0].reset();
        $('#weightStrandId').prop('disabled', false);
        loadWeights(optionId).then(() => loadAvailableStrands(optionId));
        new bootstrap.Modal('#modalWeights').show();
    }

    function loadWeights(optionId){
        return $.get('@Url.Action("ListOptionStrandWeights","AssessmentManagement")',{ questionOptionId: optionId })
         .done(r=>{
            const tbody = $('#weightsTable tbody').empty();
            (r.data||[]).forEach(w=>{
                const tr = $(`

<tr>
  <td>${htmlEscape(w.strandName)}</td>
  <td>${Number(w.weight).toFixed(2)}</td>
  <td class="text-end">
    <div class="btn-group btn-group-sm">
      <button class="btn btn-outline-primary" data-w="edit" data-strand="${w.strandId}" data-weight="${w.weight}"><i class="bi bi-pencil"></i></button>
      <button class="btn btn-outline-danger" data-w="del" data-strand="${w.strandId}"><i class="bi bi-trash"></i></button>
    </div>
  </td>
</tr>`);
                tbody.append(tr);
            });
         })
         .fail(()=>Swal.fire({ icon:'error', title:'Failed', text:'Failed to load weights.' }));
    }

    function loadAvailableStrands(optionId, currentEditingStrandId){
        return $.get('@Url.Action("ListAvailableStrands","AssessmentManagement")',{ questionOptionId: optionId })
            .done(r=>{
                const sel = $('#weightStrandId').empty();
                sel.append('<option value="" disabled selected>Select...</option>');
                if(currentEditingStrandId){
                    const rowBtn = $(`#weightsTable button[data-w="edit"][data-strand="${currentEditingStrandId}"]`).closest('tr');
                    const nameFromRow = rowBtn.find('td').first().text().trim();
                    sel.append(`<option value="${currentEditingStrandId}">${htmlEscape(nameFromRow || '(Current)')}</option>`);
                }
                (r.data||[]).forEach(s=>{
                    if (currentEditingStrandId && s.id === currentEditingStrandId) return;
                    sel.append(`<option value="${s.id}">${htmlEscape(s.name)}</option>`);
                });
            })
            .fail(()=>Swal.fire({ icon:'error', title:'Failed', text:'Failed to load available strands.' }));
    }

    $('#weightsTable').on('click','button[data-w]', function(){
        const btn = $(this);
        const action = btn.data('w');
        const strandId = btn.data('strand');
        const optionId = $('#weightsOptionId').val();

        if(action === 'edit'){
            $('#weightStrandId').prop('disabled', true);
            $('#weightValue').val(btn.data('weight'));
            loadAvailableStrands(optionId, strandId).then(()=>{
                $('#weightStrandId').val(strandId);
            });
        } else if(action === 'del'){
            Swal.fire({ icon:'warning', title:'Delete this weight?', showCancelButton:true, confirmButtonText:'Delete', cancelButtonText:'Cancel' })
              .then(result=>{
                if(!result.isConfirmed) return;
                ajaxJson('@Url.Action("DeleteOptionStrandWeight","AssessmentManagement")','POST',{
                    questionOptionId: optionId,
                    strandId
                }).done(r=>{
                    if(!r.success){ Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return; }
                    loadWeights(optionId).then(() => loadAvailableStrands(optionId));
                }).fail(xhr=>Swal.fire({ icon:'error', title:'Failed', text:xhr.responseJSON?.message||'Error deleting weight.' }));
              });
        }
    });

    $('#formWeight').on('submit', function(e){
        e.preventDefault();
        const optionId = $('#weightsOptionId').val();
        const strandId = $('#weightStrandId').val();
        if(!strandId){
            Swal.fire({ icon:'info', title:'Select a strand' });
            return;
        }
        const payload = {
            questionOptionId: optionId,
            strandId: strandId,
            weight: parseFloat($('#weightValue').val())
        };
        ajaxJson('@Url.Action("UpsertOptionStrandWeight","AssessmentManagement")','POST', payload)
          .done(r=>{
              if(!r.success){ Swal.fire({ icon:'error', title:'Failed', text:r.message||'Failed' }); return; }
              loadWeights(optionId).then(()=>{
                  $('#formWeight')[0].reset();
                  $('#weightStrandId').prop('disabled', false);
                  loadAvailableStrands(optionId);
              });
          })
          .fail(xhr=>Swal.fire({ icon:'error', title:'Failed', text:xhr.responseJSON?.message||'Error saving weight.' }));
    });

    // ---------------- Bulk Upload (SuperAdmin only) ----------------
    const bulkBtn = document.getElementById('btnBulkUpload');
    if (bulkBtn){
        const bulkModalEl = document.getElementById('modalBulkUploadAssess');
        const bulkResult = document.getElementById('bulkAssessResult');
        const bulkResultText = document.getElementById('bulkAssessResultText');
        const fileInput = document.getElementById('bulkAssessFile');
        const modeSelect = document.getElementById('bulkAssessMode');
        const resetBtn = document.getElementById('btnBulkAssessReset');
        const uploadBtn = document.getElementById('btnBulkAssessUpload');
        const bulkModal = new bootstrap.Modal(bulkModalEl);

        bulkBtn.addEventListener('click', () => {
            document.getElementById('formBulkAssess').reset();
            bulkResult.classList.add('d-none');
            bulkResultText.textContent = '';
            bulkModal.show();
        });

        resetBtn.addEventListener('click', () => {
            document.getElementById('formBulkAssess').reset();
            bulkResult.classList.add('d-none');
            bulkResultText.textContent = '';
        });

        uploadBtn.addEventListener('click', async () => {
            const file = fileInput.files[0];
            const mode = modeSelect.value || 'insert';
            if(!file){ await Swal.fire({ icon:'info', title:'Select a CSV file' }); return; }

            const fd = new FormData();
            fd.append('file', file);

            bulkResult.classList.remove('d-none');
            bulkResultText.textContent = 'Uploading...';

            try{
                const res = await fetch(`@Url.Action("BulkUpload","AssessmentManagement")?mode=${encodeURIComponent(mode)}`, {
                    method:'POST',
                    body: fd
                });
                if(res.status === 403){
                    bulkResultText.textContent = 'Not authorized (SuperAdmin only).';
                    return;
                }
                const json = await res.json().catch(()=>({}));
                if(!res.ok){
                    bulkResultText.textContent = json.message || 'Upload failed.';
                    return;
                }

                // Clean report formatting
                const lines = [
                    `Questions Created: ${json.questionsCreated}`,
                    `Questions Updated: ${json.questionsUpdated}`,
                    `Duplicates Skipped: ${json.questionDuplicatesSkipped}`,
                    `Options Created: ${json.optionsCreated}`,
                    `Weights Created: ${json.weightsCreated}`,
                    `Rows Parsed: ${json.rowsParsed}`
                ];
                if(json.errors && json.errors.length){
                    lines.push('Errors:');
                    json.errors.forEach(err => lines.push(` - ${err}`));
                }
                const report = lines.join('\n');

                bulkResultText.textContent = report;
                questionsTable.ajax.reload(null,false);
            }catch (err){
                await Swal.fire({ icon:'error', title:'Failed', text: (err&&err.message)||'Upload failed.' });
                bulkResultText.textContent = 'Upload failed.';
            }
        });
    }
})(jQuery);
</script>
}